<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:gravity="center_horizontal"
            android:background="@drawable/header_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sfrmHome"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginVertical="14dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAlignment="textEnd">

            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/profile_picture"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/circle"
            android:layout_marginTop="-80dp"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angel Gabriel Ramirez Osuna"
                android:textSize="20sp"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="angelgabrielramirez30@gmail.com"
                android:textSize="16sp"
                android:padding="4dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="6dp"
                >
                <ImageView
                    android:id="@+id/imgLinkedIn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/linkedin"
                    android:layout_marginRight="12dp"/>
                <ImageView
                    android:id="@+id/imgGitHub"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/github"
                    android:layout_marginRight="12dp"/>
                <ImageView
                    android:id="@+id/imgGitLab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/gitlab"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtCarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ing. en Tecnologías de la Información"
                android:textSize="16sp"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtMateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="Programación Móvil"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>